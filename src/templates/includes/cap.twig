<section class="cap">
    <div class="container">
        <div class="cap__area">
            <div class="cap__slider" data-element="cap-slider">
                <button class="cap__nav cap__nav_left"></button>
                <button class="cap__nav cap__nav_right"></button>
                <div class="cap__wrapper swiper-wrapper">
                    {% for item in [1,2,3,4,5,6] %}
                        <a href="#" class="cap__slide swiper-slide">
                            <picture class="cap__picture">
                                <source srcset="/assets/img/cap/cap-1_mob.jpg" media="(max-width: 1260px)">
                                <img src="/assets/img/cap/cap-1.jpg" alt="" class="cap__image" loading="lazy">
                            </picture>
                        </a>
                    {% endfor %}
                </div>
                <div class="cap__pagination swiper-pagination"></div>
            </div>
            <div class="cap__informer">
                {% include 'components/informer.twig' %}
            </div>
        </div>
    </div>
</section>
