        { mod: 'history-tile__item history-tile__item_middle', year: '2002', text: 'Запущено потоковое производство мягкой мебели и матрасов',
            icons: [] },
        { mod: 'history-tile__item history-tile__item_middle', year: '2004', text: 'Запущено потоковое производство корпусной и кухонной мебели',
