    ]
%}

<section class="history-tile">
    <div class="container">
        <div class="history-tile__top">
            <h2 class="history-tile__title title">История</h2>
            <a href="#" class="history-tile__all text-14">Все филиалы </a>
        </div>
        <div class="history-tile__area">
            {% for item in historyTile %}
                {% if item.icons.length %}
                    <a href="#" class="{{ item.mod ? item.mod : 'history-tile__item' }}">
                        <div class="history-tile__year title">{{ item.year }}</div>
                        <div class="history-tile__text text-16">{{ item.text }}</div>
                        <div class="history-tile__icons">
                            {% for icon in item.icons %}
                                <img src="{{ icon }}" alt="" class="history-tile__icon">
                            {% endfor %}
                        </div>
                    </a>
                {% else %}
                    <div class="{{ item.mod ? item.mod : 'history-tile__item' }}">
                        {% if item.mod == 'history-tile__item history-tile__item_text' %}
                            <div class="history-tile__big-text title">
                                Уверенными шагами компания начала наращивать обороты и расширять территорию своего присутствия:
                            </div>
                        {% else %}
                            <div class="history-tile__year title">{{ item.year }}</div>
                            <div class="history-tile__text text-16">{{ item.text }}</div>
                        {% endif %}
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</section>
