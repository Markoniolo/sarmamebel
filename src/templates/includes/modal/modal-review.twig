    set modalReviewRate = [
        { id: 'modal-review-rate-radio-5', value: '5' },
        { id: 'modal-review-rate-radio-4', value: '4' },
        { id: 'modal-review-rate-radio-3', value: '3' },
        { id: 'modal-review-rate-radio-2', value: '2' },
        { id: 'modal-review-rate-radio-1', value: '1' }
    ]
%}

