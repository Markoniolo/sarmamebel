{%
    set headerNav = [
        { title: 'Бонусная система',  index: '' },
        { title: 'Акции', mod: 'red', index: '1' },
        { title: 'Доставка и оплата',  index: '2' },
        { title: 'Обмен и возврат',  index: '3' },
        { title: 'Партнерам',  index: '4' },
        { title: 'Ещё', mod: 'dropdown', list: ['Магазины','Энциклопедия сна','О компании','Гостиницам'], index: '5' },
    ]
%}
{%
    set headerCategory = [
        { name: 'Тип', list: ['Пружинные','С ортопедическим эффектом','Беспружинные'] },
        { name: 'Размер', list: ['Односпальные','Двуспальные','Детские'] },
        { name: 'Жесткость', list: ['Мягкие','Средняя жёсткость','Жёсткие'] },
        { name: 'По назначению', list: ['На диван','Анатомические','На большой вес','Для пожилых'] },
        { name: 'По форме', list: ['Тонкие','Высокие','Топперы'] },
        { name: 'По цене', list: ['Недорогие','Премиум','Распродажа'] }
    ]
%}

<div class="header-category-layer" data-element="header-category-layer"></div>
<header class="{{ headerVars.mod ? 'header header_shadow' : 'header' }}">
    {% include 'components/catalog.twig' %}
    <div class="container">
        <div class="header__wrap">
            <div class="header__top">
                <a href="#modal-city" class="header__city text-13-medium" data-fancybox>
                    <img src="/assets/img/ic_city_arrow_blue.svg" alt="" class="header__city-icon">
                    <div class="header__city-current">Иркутск <span class="header__city-count">∙ 23 салона</span></div>
                </a>
                <nav class="header__menu">
                    <ul class="header__list">
                        {% for item in headerNav %}
                            <li class="header__item">
                                {% if item.mod == 'dropdown' %}
                                    <div class="header__link header__link_dropdown" data-class="header__link" data-active-class="header__link_active" data-element="header-link-dropdown">
                                        <span class="header__link-span">{{ item.title }}</span>
                                        <div class="header__link-arrow">
                                            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                <mask id="mask0_517_68643" style="mask-type:alpha" maskUnits="userSpaceOnUse" x="0" y="0" width="16" height="16">
                                                    <rect width="16" height="16" fill="#D9D9D9"/>
                                                </mask>
                                                <g mask="url(#mask0_517_68643)">
                                                    <path d="M7.99863 11.3746L3.87109 7.24706L4.84863 6.26953L7.99863 9.41953L11.1486 6.26953L12.1262 7.24706L7.99863 11.3746Z" fill="#D9D9D9"/>
                                                </g>
                                            </svg>
                                        </div>
                                        <div class="header__dropdown">
                                            {% for dropdownLink in item.list %}
                                                <a href="#" class="header__dropdown-link">{{ dropdownLink }}</a>
                                            {% endfor %}
                                        </div>
                                    </div>
                                {% else %}
                                    <a href="#" class="{{ item.mod == 'red' ? 'header__link header__link_red' : 'header__link' }}">
                                        {{ item.title }}
                                    </a>
                                {% endif %}
                            </li>
                        {% endfor %}
                    </ul>
                </nav>
                <div class="header__phone-dropdown" data-element="header-link-dropdown"
                     data-class="header__phone-dropdown" data-active-class="header__phone-dropdown_active">
                    <div class="header__phone link-hover-blue">
                        8 800 555-35-55
