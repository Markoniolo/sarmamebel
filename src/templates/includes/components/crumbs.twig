<div class="{{ crumbsVars.mod ? crumbsVars.mod : 'crumbs' }}">
    <div class="container">
        <ul class="crumbs__list">
            {% for item in crumbsVars.list %}
                <li class="crumbs__item text-13">
                    {% if loop.last %}
                        <span class="crumbs__link">{{ item }}</span>
                    {% else %}
                        <a href="#" class="crumbs__link link-hover-blue">{{ item }}</a>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    </div>
</div>
